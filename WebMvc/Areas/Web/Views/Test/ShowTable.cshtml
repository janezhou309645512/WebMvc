
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>datagrid增删查改</title>
    <script src="~/Content/jquery-easyui-1.6.9/jquery.min.js"></script>


    <script src="~/Content/jquery-easyui-1.6.9/jquery.easyui.min.js"></script>

    <link href="~/Content/jquery-easyui-1.6.9/themes/default/easyui.css" rel="stylesheet" />
    <link href="~/Content/jquery-easyui-1.6.9/themes/icon.css" rel="stylesheet" />

  
</head>

<body>
    <div>
        <table id="box1" style="width:100%;height:100%;"></table>
         




    </div>
    <script type="text/javascript">
        $(function () {
            //{"MaterialCode":"0101010101","MaterialName":"圆钢","MaterialType":"01010101","Model":"Ф6.5","Unit":"吨","Material":"","LimitLevel":"必须限额","ManageLevel":"","CreatePerson":"","CreateDate":"1900/1/1 0:00:00","UpdatePerson":"访客","UpdateDate":"2013/7/1 19:00:40","Remark":""}
             $('#box1').datagrid({
                loadMsg: '数据正在加载，请耐心等待...',
                rownumbers: true,
                singleSelect: true,
                url: '../Test/QueryList',
                queryParams: {
                    start: 0,
                    limit: 10
                },
                method: 'GET',
                fitColumns: true,
                fit: true,
                columns: [[
                    { field: 'MaterialCode', title: '公司类型', width: 100 },
                    { field: 'MaterialName', title: 'CompanyId', hidden: true, width: 100 },
                    { field: 'MaterialType', title: '公司名称', width: 100, align: 'left' },
                    { field: 'Model', title: '公司英文名', width: 100, align: 'left' },
                    { field: 'Unit', title: '企业性质', width: 100, align: 'left' },
                    { field: 'Material', title: '主营项目', width: 100, align: 'left' },
                    { field: 'LimitLevel', title: '主营品牌', width: 100, align: 'left' },
                    { field: 'ManageLevel', title: '公司简介', width: 100, align: 'left' }
                ]],
                pagination: true,
                pageSize: 10,
                pageList: [10, 20, 30],
                toolbar: [{
                    text: '公司名称：<input class="easyui-textbox" type="text" id="txt_CompanyName"/>'
                },
                {
                    text: '查询',
                    iconCls: 'icon-search',
                    handler: function () {
                     
                    }
                }
                ]
            })


             









        });










    </script>

    
</body>


</html>
